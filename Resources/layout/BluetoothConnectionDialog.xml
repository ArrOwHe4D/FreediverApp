<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageveiw_bt_icon"
            android:background="@drawable/icon_info"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_device_name"
                android:text="BluetoothDevice name"
                android:textAppearance="?android:attr/textAppearanceMedium" 
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textview_mac_address"        
                android:text="BluetoothDevice mac-adress"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:layout_below="@+id/txtview_btdv_name"/>

        </LinearLayout>
    
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_status"
            android:text="Status:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"      
            android:layout_marginLeft="70dp"/>  

        <TextView
            android:id="@+id/textview_con_state"
            android:text="Connected"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"      
            android:layout_marginLeft="10dp"/>  

    </LinearLayout>

</LinearLayout>
