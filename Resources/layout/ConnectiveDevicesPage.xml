<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/frameLayout">

    <TextView
        android:text="How to Transfer Data:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/textView1" />

    <TextView
        android:text="1. Press the Connect Button and Connect to your Divecomputer using the Android Wifi Menu."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/textView2" />

    <Button
        android:text="Connect"
        android:textColor="@android:color/white"
        android:backgroundTint="?android:attr/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_connect"/>

    <TextView
        android:text="2. After you successfully connected to the Divecomputer, go back to this Menu and press the Transfer button."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"
        android:id="@+id/textView3" />

    <Button
        android:text="Transfer"
        android:textColor="@android:color/white"
        android:backgroundTint="?android:attr/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_scan_btn"/>

    <TextView
        android:text="3. After you transferred the data to your phone successfully, disconnect from the arduino using the Android Wifi Menu."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/textView4" />

    <TextView
        android:text="4. Enable a working internet connection via Wifi or Mobile Data on your phone."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="5. Press the Sync button to upload your data to the cloud."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/textView6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        
        <Button
            android:text="OTA"
            android:background="@drawable/button_round"
            android:textColor="@android:color/white"
            android:textSize="10pt"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_sync_ota"
            android:layout_marginLeft="90dp"/>
        <Button
            android:text="SYNC"
            android:background="@drawable/button_round"
            android:textColor="@android:color/white"
            android:textSize="10pt"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/button_sync"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>


</LinearLayout>
