<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/add_dive_session"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/textview_add_divesession"/>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="4dp"
        app:contentPadding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:layout_marginTop="30dp"
                tools:ignore="MissingDimension">
        
                <TextView
                    android:text="@string/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:id="@+id/label_location" />

                <TextView
                    android:text="Köln"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:id="@+id/textview_location" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:layout_marginTop="30dp"
                tools:ignore="MissingDimension">

                <TextView
                    android:text="@string/weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:id="@+id/label_weather" />

                <TextView
                    android:text="Sonnig | 22C°"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:id="@+id/textview_weather" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="100"
                android:layout_marginTop="30dp"
                tools:ignore="MissingDimension">

                <TextView
                    android:text="@string/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:id="@+id/label_date" />

                <TextView
                    android:text="9.12.2020"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:id="@+id/textview_date" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        tools:ignore="MissingDimension">

        <Button
            android:text="@string/add"
            android:textColor="@android:color/white"
            android:backgroundTint="?android:attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/button_add_session" />

        <Button
            android:text="@string/abort"
            android:textColor="@android:color/white"
            android:backgroundTint="?android:attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/button_cancel" />

    </LinearLayout>

</LinearLayout>

