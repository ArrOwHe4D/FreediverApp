<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/add_dive_session"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:id="@+id/textview_add_divesession"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:layout_marginLeft="3dp"
        tools:ignore="MissingDimension">

        <TextView
            android:text="Verbunden mit:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwConnected" />

        <TextView
            android:text="Tauchcomputer-RX2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwConnectedV" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:layout_marginLeft="3dp"
        tools:ignore="MissingDimension">
        
        <TextView
            android:text="Standort: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwLocation" />

        <TextView
            android:text="Köln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwLocationV" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:layout_marginLeft="3dp"
        tools:ignore="MissingDimension">

        <TextView
            android:text="Wetter: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwWeather" />

        <TextView
            android:text="Sonnig | 22C°"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwWeatherV" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:layout_marginLeft="3dp"
        tools:ignore="MissingDimension">

        <TextView
            android:text="Datum: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwDate" />

        <TextView
            android:text="9.12.2020"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwDateV" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:layout_marginLeft="3dp"
        tools:ignore="MissingDimension">

        <TextView
            android:text="Tauchzeit: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwDiveTime" />

        <TextView
            android:text="1:13:54 Std"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="8pt"
            android:id="@+id/tvwDiveTimeV" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        tools:ignore="MissingDimension">

        <Button
            android:text="Hinzufügen"
            android:textColor="@android:color/white"
            android:backgroundTint="?android:attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnAddSession" />

        <Button
            android:text="Abbrechen"
            android:textColor="@android:color/white"
            android:backgroundTint="?android:attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnCancel" />

    </LinearLayout>

</LinearLayout>

